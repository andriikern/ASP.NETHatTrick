{
  "$schema": "http://json.schemastore.org/appsettings.json",
  "ConnectionStrings": { },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "LevelSwitches": { "$controlSwitch": "Information" },
    "MinimumLevel": {
      "Default": "Information",
      "ControlledBy": "$controlSwitch",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.AspNetCore.Authentication": "Information",
        "Microsoft.Hosting": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "path": "Logs/Log.log",
          "rollingInterval": "Year"
        }
      }
    ],
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": { "expression": "RequestMethod = 'GET' and StatusCode >= 200 and StatusCode < 300 and Elapsed < 1000" }
      }
    ],
    "RequestLoggingOptions": { "MessageTemplate": "HTTP {RequestMethod} {RequestPath} responded {StatusCode} in {Elapsed:N4} ms." }
  }
}
