{
  "$schema": "http://json.schemastore.org/appsettings.json",
  "ConnectionStrings": {
    "HatTrick_SQLite": "Data Source=SQLite/HatTrick.db;",
    "HatTrick_SQL_Server": "Data Source=.\\sqlexpress; Initial Catalog=HatTrick; Persist Security Info=True; Integrated Security=SSPI; TrustServerCertificate=True; MultipleActiveResultSets=False;"
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Debug",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": { "Override": { "HatTrick": "Debug" } },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "path": "Logs/Log.log",
          "rollingInterval": "Year"
        }
      },
      {
        "Name": "Debug",
        "Args": { "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] {Message:lj}{NewLine}{Exception}" }
      }
    ],
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": { "expression": "false" }
      }
    ]
  },
  "DatabaseProvider": "SQLite"
}
